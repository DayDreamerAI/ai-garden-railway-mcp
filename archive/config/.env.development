# AI Garden Enhanced Railway MCP Server - Development Environment
# Phase 3.3 - Development environment template
# Created: 2025-09-12T23:52:00Z
# 
# DEVELOPMENT NOTICE: This configuration is optimized for local development
# - Reduced security for easier testing
# - Enhanced logging for debugging
# - Local database connection options
# - Hot reload and development features enabled

# =============================================================================
# DATABASE CONFIGURATION (Development)
# =============================================================================

# Local Neo4j Connection (Development Database)
# Option 1: Local Neo4j Desktop/Server
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=daydreamer2025

# Option 2: AuraDB Free (for cloud testing)
# NEO4J_URI=neo4j+s://YOUR_DEV_AURADB_ID.databases.neo4j.io:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=YOUR_DEV_AURADB_PASSWORD

# Database Pool Configuration (Development)
NEO4J_MAX_CONNECTION_LIFETIME=1800
NEO4J_MAX_CONNECTION_POOL_SIZE=10
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=15

# =============================================================================
# SECURITY CONFIGURATION (Development - Relaxed)
# =============================================================================

# Bearer Token Authentication (Optional in development)
# Generate with: openssl rand -hex 16 (shorter for dev)
RAILWAY_BEARER_TOKEN=dev-token-replace-for-testing
REQUIRE_AUTHENTICATION=false

# Rate Limiting (Relaxed for development)
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST_ALLOWANCE=20

# Security Headers (Relaxed for development)
ENABLE_SECURITY_HEADERS=false
ENABLE_CSRF_PROTECTION=false

# =============================================================================
# SERVER CONFIGURATION (Development)
# =============================================================================

# MCP Transport Protocol
MCP_TRANSPORT=sse

# Server Configuration (Development)
MCP_PORT=8080
MCP_HOST=127.0.0.1
MCP_TIMEOUT=10

# =============================================================================  
# LOGGING AND MONITORING (Verbose for Development)
# =============================================================================

# Logging Configuration (Verbose)
LOG_LEVEL=DEBUG
ENABLE_AUDIT_LOGGING=true
LOG_RETENTION_DAYS=7

# Development Logging
ENABLE_REQUEST_LOGGING=true
LOG_SQL_QUERIES=true
LOG_PERFORMANCE_METRICS=true

# Performance Monitoring (Detailed)
ENABLE_PERFORMANCE_METRICS=true
METRICS_COLLECTION_INTERVAL=10

# Health Check Configuration (Frequent)
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# AI GARDEN FEDERATION SETTINGS (Development)
# =============================================================================

# Multi-Agent Configuration
AI_GARDEN_FEDERATION_ENABLED=true
AI_GARDEN_VERSION=2.3.0-dev

# Agent Configuration
PRIMARY_AGENT_NAME=Claude (Daydreamer Conversations)
SECONDARY_AGENT_NAME=ChatGPT (AI Garden Agent - Dev)

# Memory Sovereignty Settings
MEMORY_SOVEREIGNTY_ENABLED=true
ENABLE_TEMPORAL_BINDING=true
PROTECT_CORE_ENTITIES=true

# Development Memory Settings
ENABLE_MEMORY_DEBUG_ENDPOINTS=true
ALLOW_MEMORY_INSPECTION=true

# =============================================================================
# PERFORMANCE OPTIMIZATION (Development)
# =============================================================================

# Caching Configuration (Disabled for fresh data)
ENABLE_RESPONSE_CACHING=false
CACHE_TTL_SECONDS=60
CACHE_MAX_SIZE_MB=10

# Connection Optimization (Shorter timeouts)
ENABLE_CONNECTION_POOLING=true
CONNECTION_TIMEOUT=10
READ_TIMEOUT=30

# =============================================================================
# CHATGPT CUSTOM CONNECTOR OPTIMIZATION (Development)
# =============================================================================

# ChatGPT Compatibility
CHATGPT_CUSTOM_CONNECTOR_MODE=true
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=*

# Response Optimization (Verbose for debugging)
MAX_RESPONSE_SIZE_KB=500
ENABLE_RESPONSE_COMPRESSION=false

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_AUTO_RESTART=true
ENABLE_DEVELOPMENT_ENDPOINTS=true

# Testing Configuration
ENABLE_TEST_ENDPOINTS=true
MOCK_EXTERNAL_SERVICES=false
ENABLE_INTEGRATION_TESTS=true

# =============================================================================
# DEPLOYMENT METADATA
# =============================================================================

# Environment Identification
RAILWAY_ENVIRONMENT=development
DEPLOYMENT_VERSION=2.3.0-dev
DEPLOYMENT_TIMESTAMP=2025-09-12T23:52:00Z

# Feature Flags (Development)
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_DEBUG_ENDPOINTS=true

# =============================================================================
# DEVELOPMENT CHECKLIST
# =============================================================================
#
# For local development:
# □ Neo4j database running locally or AuraDB accessible
# □ NEO4J_PASSWORD matches your local/dev database
# □ MCP_PORT not conflicting with other services
# □ LOG_LEVEL=DEBUG for detailed logging
# □ REQUIRE_AUTHENTICATION=false for easier testing
# 
# For Railway development deployment:
# □ Set REQUIRE_AUTHENTICATION=true
# □ Use secure RAILWAY_BEARER_TOKEN
# □ Configure proper CORS_ALLOWED_ORIGINS
