# AI Garden Railway MCP Server - Environment Template
# Created: 2025-09-13
# SECURITY: Copy this to .env and fill in actual values
# WARNING: Never commit .env files with real credentials

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neo4j Connection (Required)
# For AuraDB: neo4j+s://YOUR_ID.databases.neo4j.io
# For local: bolt://localhost:7687
NEO4J_URI=

# Neo4j Authentication (Required)
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=

# Database Pool Configuration
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=60

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Bearer Token Authentication (Required for production)
# Generate with: openssl rand -hex 32
RAILWAY_BEARER_TOKEN=

# Security Settings
REQUIRE_AUTHENTICATION=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST_ALLOWANCE=10

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# MCP Transport Protocol
MCP_TRANSPORT=sse

# Server Configuration
MCP_PORT=8080
MCP_HOST=0.0.0.0
MCP_TIMEOUT=30

# =============================================================================  
# LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true
LOG_RETENTION_DAYS=30

# Performance Monitoring
ENABLE_PERFORMANCE_METRICS=true
METRICS_COLLECTION_INTERVAL=60

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# AI GARDEN FEDERATION SETTINGS
# =============================================================================

# Multi-Agent Configuration
AI_GARDEN_FEDERATION_ENABLED=true
AI_GARDEN_VERSION=2.3.0

# Agent Configuration
PRIMARY_AGENT_NAME=Claude (Daydreamer Conversations)
SECONDARY_AGENT_NAME=ChatGPT (AI Garden Agent)

# Memory Sovereignty Settings
MEMORY_SOVEREIGNTY_ENABLED=true
ENABLE_TEMPORAL_BINDING=true
PROTECT_CORE_ENTITIES=true

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Caching Configuration
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100

# Connection Optimization
ENABLE_CONNECTION_POOLING=true
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60

# =============================================================================
# CHATGPT CUSTOM CONNECTOR OPTIMIZATION
# =============================================================================

# ChatGPT Compatibility
CHATGPT_CUSTOM_CONNECTOR_MODE=true
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=https://chat.openai.com

# Response Optimization
MAX_RESPONSE_SIZE_KB=100
ENABLE_RESPONSE_COMPRESSION=true

# =============================================================================
# DEPLOYMENT METADATA
# =============================================================================

# Environment Identification
RAILWAY_ENVIRONMENT=production
DEPLOYMENT_VERSION=2.3.0
DEPLOYMENT_TIMESTAMP=

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_ENDPOINTS=false

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
#
# 1. Copy this file to .env in the same directory
# 2. Fill in all required values (marked as Required)
# 3. Generate a secure bearer token:
#    openssl rand -hex 32
# 4. Configure Neo4j connection:
#    - For AuraDB: Use the connection string from your AuraDB console
#    - For local: Use bolt://localhost:7687
# 5. Never commit the .env file with real credentials
# 6. Add .env to .gitignore if not already present
#
# For Railway deployment:
# - Set these environment variables in the Railway dashboard
# - Do not include the .env file in your deployment
#
# =============================================================================